{
  "name": "@advanced-rest-client/arc-ie",
  "description": "Advanced REST Client import-export UI module.",
  "version": "1.0.1",
  "license": "Apache-2.0",
  "main": "index.js",
  "module": "index.js",
  "keywords": [
    "web-components",
    "arc",
    "advanced-rest-client",
    "export",
    "data",
    "data-export"
  ],
  "authors": [
    "Pawel Psztyc",
    "The Advanced REST client authors <arc@mulesoft.com>"
  ],
  "contributors": [
    "Your name can be here!"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/advanced-rest-client/arc-ie.git"
  },
  "bugs": {
    "url": "https://github.com/advanced-rest-client/arc-ie/issues",
    "email": "arc@mulesoft.com"
  },
  "dependencies": {
    "@advanced-rest-client/arc-events": "^0.2.0",
    "@advanced-rest-client/arc-icons": "^3.1.2",
    "@advanced-rest-client/arc-models": "^4.2.0",
    "@advanced-rest-client/arc-types": "^0.2.1",
    "@advanced-rest-client/date-time": "^3.0.2",
    "@anypoint-web-components/anypoint-autocomplete": "^0.2.7",
    "@anypoint-web-components/anypoint-button": "^1.1.1",
    "@anypoint-web-components/anypoint-checkbox": "^1.1.3",
    "@anypoint-web-components/anypoint-collapse": "^0.1.0",
    "@anypoint-web-components/anypoint-dropdown-menu": "^0.1.17",
    "@anypoint-web-components/anypoint-input": "^0.2.21",
    "@anypoint-web-components/anypoint-item": "^1.0.8",
    "@anypoint-web-components/anypoint-listbox": "^1.1.4",
    "@anypoint-web-components/anypoint-selector": "^1.1.5",
    "@api-components/http-method-label": "^3.1.2",
    "@polymer/iron-form": "^3.0.1",
    "@polymer/paper-toast": "^3.0.1",
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0",
    "pouchdb": "^7.2.2"
  },
  "devDependencies": {
    "@advanced-rest-client/arc-data-generator": "^3.1.9",
    "@advanced-rest-client/arc-demo-helper": "^2.2.0",
    "@advanced-rest-client/testing-karma-sl": "^1.4.2",
    "@open-wc/eslint-config": "^3.0.0",
    "@open-wc/testing": "^2.5.29",
    "@open-wc/testing-karma": "^4.0.8",
    "@types/har-format": "^1.2.4",
    "@types/postman-collection": "^3.5.5",
    "@types/pouchdb": "^6.4.0",
    "chance": "^1.1.7",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.57.7",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-babel": "^5.3.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "sinon": "^9.2.0",
    "typescript": "^4.0.3",
    "typescript-lit-html-plugin": "^0.9.0"
  },
  "scripts": {
    "test": "karma start --coverage",
    "start": "es-dev-server --app-index demo/index.html --node-resolve --open --watch",
    "update-types": "gen-typescript-declarations --deleteExisting --outDir .",
    "start:compatibility": "es-dev-server --app-index demo/index.html --compatibility auto --node-resolve --open --watch",
    "lint:eslint": "eslint --ext .js,.html .",
    "format:eslint": "eslint --ext .js,.html . --fix",
    "lint:prettier": "prettier \"**/*.js\" --list-different || (echo '↑↑ these files are not prettier formatted ↑↑' && exit 1)",
    "format:prettier": "prettier \"**/*.js\" --write",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:legacy": "karma start --compatibility auto --coverage",
    "test:legacy:watch": "karma start --compatibility auto --auto-watch=true --single-run=false",
    "test:sl": "karma start karma.sl.config.js --compatibility auto --coverage"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "overrides": [
      {
        "files": [
          "demo/**/*.js",
          "test/**/*.js",
          "**/demo/**/*.html"
        ],
        "rules": {
          "no-console": "off",
          "no-unused-expressions": "off",
          "no-plusplus": "off",
          "no-param-reassing": "off",
          "class-methods-use-this": "off",
          "import/no-extraneous-dependencies": "off",
          "prefer-destructuring": "off",
          "no-param-reassign": "off",
          "no-template-curly-in-string": "off"
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "always"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  }
}
